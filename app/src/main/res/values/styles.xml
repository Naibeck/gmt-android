<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="GeneralTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CategoryTextView" parent="GeneralTextView">
        <item name="android:paddingBottom">@dimen/view_vertical_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/spectra</item>
    </style>

    <style name="ActionTextView" parent="GeneralTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/view_vertical_margin</item>
    </style>

    <style name="HeaderTextView" parent="GeneralTextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/header_view_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/header_view_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/header_view_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/header_view_vertical_margin</item>
        <item name="android:background">@drawable/rounded_primary</item>
    </style>
</resources>
